<form action="/">
    <label for="songUrl">Source</label>
    <input id="songUrl" type="text" name="url" class="fancyInput">
    <label for="songFolder">Destination</label>
    <select id="songFolder" name="">
        {{#each folders}}
            <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
    <label for="pullSongData">Pull song data from last.fm</label>
    <input id="pullSongData" type="checkbox" checked>
    <input type="submit" value="Add to Download Queue" class="happyButton">
</form>