<!DOCTYPE html>
<html ng-app="music" lang="en">
    <head>
        {{! Generic stuff}}
        <meta charset="UTF-8">
        <title>{{title}}</title>
        <base href="/petify/">
        <meta name="application-name" content="{{title}}">
        <meta name="description" content="A magical cloud based music streaming service">
        <meta name="format-detection" content="telephone=no">
        <link href="favicon.ico" rel="icon" id="dynamic-favicon" type="image/x-icon">
        <link href='stylesheets/style.css' rel='stylesheet'>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="//code.jquery.com/jquery-1.12.0.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js"></script>
        <script src="js/rzslider.min.js"></script>
        <script src="js/music.js"></script>
        {{! IE/Edge/Windows stuff}}
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="msapplication-navbutton-color" content="#191919">
        <meta name="application-name" content="{{title}}">
        <meta name="msapplication-tooltip" content="{{title}}">
        <meta name="msapplication-tap-highlight" content="no">
        {{! Safari/iOS stuff}}
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
        <meta name="apple-mobile-web-app-title" content="{{title}}">
        <link href="img/album.png" rel="apple-touch-icon">
        {{! Chrome/Google stuff}}
        <meta name="mobile-web-app-capable" content="yes">
        <meta name="theme-color" content="#191919">
        {{! Facebook/Open Graph}}
        <meta property="og:type" content="website">
        <meta property="og:url" content="https://unacceptableuse.com/petify/">
        <meta property="og:title" content="{{title}}">
        <meta property="og:image" content="img/album.png">
        <meta property="og:description" content="A magical cloud based music streaming service">
        <meta property="og:site_name" content="{{title}}">
        <meta property="og:locale" content="en_GB">
        <meta property="article:author" content="Ocelotworks">
        {{! Twitter}}
        <meta name="twitter:card" content="{{title}}">
        <meta name="twitter:site" content="@ocelotworks">
        <meta name="twitter:creator" content="@unacceptableuse">
        <meta name="twitter:url" content="https://unacceptableuse.com/petify/">
        <meta name="twitter:title" content="{{title}}">
        <meta name="twitter:description" content="A magical cloud based music streaming service">
        <meta name="twitter:image" content="img/album.png">
        {{! Google+/Schema.org}}
        <link href="https://plus.google.com/+UnacceptableUse" rel="publisher">
        <meta itemprop="name" content="{{title}}">
        <meta itemprop="description" content="A magical cloud based music streaming service">
        <meta itemprop="image" content="img/album.png">
        {{!Google Analytics}}
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-18077037-4', 'auto');
            ga('send', 'pageview');
        </script>
    </head>
    <body>
        {{{body}}}
    </body>
</html>
